<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="270dp"
    android:paddingStart="24dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thumbnail_headline"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/rounded_corner" />

    <TextView
        android:id="@+id/title_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLength="50"
        android:text="loreodklfd ggkljlg  fkdlvj vkdljvdkv  dfvkljdvjdvkd vdjlkvjd vdkjlvdjvjdfgjfdkl g dfkj "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/thumbnail_headline"
        app:layout_constraintStart_toStartOf="@+id/thumbnail_headline"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail_headline" />

    <TextView
        android:id="@+id/time_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1 hours ago"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/title_headline"
        app:layout_constraintStart_toStartOf="@+id/title_headline"
        app:layout_constraintTop_toBottomOf="@+id/title_headline" />

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="beranju"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/time_headline"
        app:layout_constraintStart_toStartOf="@+id/time_headline"
        app:layout_constraintTop_toBottomOf="@+id/time_headline" />


</androidx.constraintlayout.widget.ConstraintLayout>